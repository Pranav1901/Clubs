    <EditText
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_corner"
        android:hint="Year of Formation"
        android:textColorHint="@color/hintcolor"
        android:paddingLeft="10dp"
        android:fontFamily="@font/reem_kufi"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/domain"
        android:layout_margin="30dp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_corner"
        android:hint="Department"
        android:textColorHint="@color/hintcolor"
        android:paddingLeft="10dp"
        android:fontFamily="@font/reem_kufi"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dob"
        android:layout_margin="30dp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/fCordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_corner"
        android:hint="Faculty Cordinator"
        android:fontFamily="@font/reem_kufi"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textColorHint="@color/hintcolor"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/department"
        android:layout_margin="30dp"
        android:inputType="text"/>
    <EditText
        android:id="@+id/president"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_corner"
        android:hint="Presidents Name"
        android:textColorHint="@color/hintcolor"
        android:paddingLeft="10dp"
        android:fontFamily="@font/reem_kufi"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fCordinator"
        android:layout_margin="30dp"
        android:inputType="text"/>

    <Button
        android:id="@+id/btninset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/reem_kufi"
        android:backgroundTint="@color/background"
        android:text="INSERT"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/president" />


</androidx.constraintlayout.widget.ConstraintLayout>